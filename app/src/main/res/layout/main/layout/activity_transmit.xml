<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/transmit_main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.TransmitActivity"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/title_sub_activity"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#ededed"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="1dp">

        <EditText
            android:id="@+id/transmit_edit_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="5"
            android:paddingLeft="4dp"
            android:maxLines="1"
            android:maxLength="8"
            android:textSize="16sp"
            android:textColor="@color/black_text"
            android:background="@drawable/bg_edit_text" />

        <Button
            android:id="@+id/transmit_search_btn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:background="@drawable/find"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/transmit_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>