<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/friend_info_main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.FriendInfoActivity"
    android:orientation="vertical"
    android:background="@color/page_background">

    <!--图片背景-->
    <LinearLayout
        android:id="@+id/friend_info_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white_text"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="34dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/friend_info_back_img"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/return_f" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/friend_info_more_tv"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="更多"
                android:textSize="22sp"
                android:textColor="@color/white_text"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/friend_info_head_img"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="0dp"
                    android:padding="2dp"
                    android:src="@android:drawable/ic_menu_camera"
                    android:background="@drawable/shape_img_view"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <!--<TextView-->
                    <!--android:id="@+id/friend_info_index_tv"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginRight="16dp"-->
                    <!--android:text="92.0%"-->
                    <!--android:textSize="22sp" />-->

            </LinearLayout>


            <TextView
                android:id="@+id/friend_info_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:text="好友备注"
                android:textColor="@color/black_text"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/friend_info_sign_tv"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_marginLeft="32dp"
                android:text="好友签名"
                android:textColor="@color/black_text"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:orientation="horizontal">

                <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:src="@drawable/matching_index"-->
                    <!--android:layout_marginLeft="32dp"/>-->

                <!--<TextView-->
                    <!--android:id="@+id/friend_info_index_tv"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="8dp"-->
                    <!--android:text="92.0%"-->
                    <!--android:textSize="20sp" />-->

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <!--空白区-->
    <View
        android:layout_width="match_parent"
        android:layout_height="64px"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!--菜单栏-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!--分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/text_line"/>

            <!--共同兴趣-->
            <LinearLayout
                android:id="@+id/friend_info_interest_layout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:clickable="true"
                android:background="@drawable/bg_layout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="共同兴趣"
                    android:layout_gravity="center"
                    android:layout_marginLeft="62px"
                    android:textColor="@color/black_text"
                    android:textSize="18sp" />
                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="65px"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_right_btn"/>

            </LinearLayout>

            <!--分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/text_line"/>
            <!--空白区域-->
            <View
                android:layout_width="match_parent"
                android:layout_height="64px"/>
            <!--分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/text_line"/>

            <!--账号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:clickable="true"
                android:background="@drawable/bg_layout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账号"
                    android:layout_gravity="center"
                    android:layout_marginLeft="62px"
                    android:textColor="@color/black_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/friend_info_account_tv"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="65px"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:text="111 1111 1111"/>

                <!--<ImageView-->
                <!--android:layout_width="32dp"-->
                <!--android:layout_height="32dp"-->
                <!--android:layout_marginRight="65px"-->
                <!--android:layout_gravity="center"-->
                <!--android:src="@drawable/ic_right_btn"/>-->

            </LinearLayout>

            <!--分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/text_line"
                android:layout_marginLeft="62px"
                android:layout_marginRight="65px"/>

            <!--生日-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:clickable="true"
                android:background="@drawable/bg_layout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生日"
                    android:layout_gravity="center"
                    android:layout_marginLeft="62px"
                    android:textColor="@color/black_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/friend_info_birth_tv"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="65px"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:text="0000-00-00"/>

                <!--<ImageView-->
                <!--android:layout_width="32dp"-->
                <!--android:layout_height="32dp"-->
                <!--android:layout_marginRight="65px"-->
                <!--android:layout_gravity="center"-->
                <!--android:src="@drawable/ic_right_btn"/>-->

            </LinearLayout>

            <!--分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/text_line"
                android:layout_marginLeft="62px"
                android:layout_marginRight="65px"/>

            <!--性别-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:clickable="true"
                android:background="@drawable/bg_layout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:layout_gravity="center"
                    android:layout_marginLeft="62px"
                    android:textColor="@color/black_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/friend_info_sex_tv"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="65px"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:text="男"/>

                <!--<ImageView-->
                <!--android:layout_width="32dp"-->
                <!--android:layout_height="32dp"-->
                <!--android:layout_marginRight="65px"-->
                <!--android:layout_gravity="center"-->
                <!--android:src="@drawable/ic_right_btn"/>-->

            </LinearLayout>

            <!--分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/text_line"
                android:layout_marginLeft="62px"
                android:layout_marginRight="65px"/>

            <!--地址-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:clickable="true"
                android:background="@drawable/bg_layout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址"
                    android:layout_gravity="center"
                    android:layout_marginLeft="62px"
                    android:textColor="@color/black_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/friend_info_add_tv"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="65px"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:text="my address"/>

                <!--<ImageView-->
                <!--android:layout_width="32dp"-->
                <!--android:layout_height="32dp"-->
                <!--android:layout_marginRight="65px"-->
                <!--android:layout_gravity="center"-->
                <!--android:src="@drawable/ic_right_btn"/>-->

            </LinearLayout>

            <!--分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/text_line"
                android:layout_marginLeft="62px"
                android:layout_marginRight="65px"/>

            <!--学历-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:clickable="true"
                android:background="@drawable/bg_layout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学历"
                    android:layout_gravity="center"
                    android:layout_marginLeft="62px"
                    android:textColor="@color/black_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/friend_info_edu_tv"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="65px"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:text="my education"/>

                <!--<ImageView-->
                <!--android:layout_width="32dp"-->
                <!--android:layout_height="32dp"-->
                <!--android:layout_marginRight="65px"-->
                <!--android:layout_gravity="center"-->
                <!--android:src="@drawable/ic_right_btn"/>-->

            </LinearLayout>

            <!--分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/text_line"/>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/friend_info_chat_btn"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="4dp"
        android:text="聊一聊"
        android:textSize="19sp"
        android:textColor="@color/white_text"
        android:background="@drawable/bg_button"/>

</LinearLayout>