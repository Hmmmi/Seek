<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:clickable="true"
    android:background="@drawable/bg_layout">

    <ImageView
        android:id="@+id/chat_list_head_img"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/headimg1"
        android:background="@drawable/shape_img_view"/>


    <!--<TextView-->
        <!--android:id="@+id/friend_index_tv"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="8dp"-->
        <!--android:layout_marginEnd="32dp"-->
        <!--android:layout_marginBottom="8dp"-->
        <!--android:text="TextView"-->
        <!--android:textColor="@color/black_text"-->
        <!--android:textSize="14sp"-->
        <!--app:layout_constraintBottom_toBottomOf="parent"-->
        <!--app:layout_constraintEnd_toEndOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="parent"-->
        <!--tools:text="92%" />-->


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="76dp"
        android:background="@color/text_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/chat_list_last_msg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:maxWidth="450px"
        android:maxHeight="20dp"
        android:text="你好！"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chat_list_msg_unread_tv"
        app:layout_constraintTop_toBottomOf="@+id/chat_list_label_tv" />

    <TextView
        android:id="@+id/chat_list_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        android:text="00:00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chat_list_label_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:maxHeight="24dp"
        android:text="好友"
        android:textColor="@color/black_text"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/chat_list_head_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chat_list_msg_unread_tv"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="[1条未读]"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chat_list_head_img"
        app:layout_constraintTop_toBottomOf="@+id/chat_list_label_tv" />

</android.support.constraint.ConstraintLayout>
